<div class="o-form__field {{invalidClass}} {{disabledClass}}">
	<label class="o-label" for="{{for}}">{{label}} {{#if optional}}<span class="o-label__note">{{text}}</span>{{/if}}</label>
	<div class="o-select">
		<select id="{{for}}" name="{{for}}" {{#if disabled}}disabled{{/if}}>
			{{#each options}}
				<option value="{{optValue}}" {{#if selected}}selected{{/if}}>{{option}}</option>
			{{/each}}
		</select>
	</div>
	{{#if invalid}}<span class="validation is-invalid">Please select a value</span>{{/if}}
</div>